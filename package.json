{
  "version": "0.0.0",
  "name": "libdweb",
  "description": "Experimental WebExtensions API for enabling DWeb protocols",
  "keywords": [
    "libdweb",
    "typed",
    "flow"
  ],
  "author": "Mozilla",
  "repository": "https://github.com/mozilla/libdweb",
  "license": "MIT",
  "devDependencies": {
    "flow-bin": "^0.77.0",
    "husky": "^0.14.0",
    "lint-staged": "^7.1.3",
    "prettier": "^1.13.5",
    "tape-ext": "0.3.0",
    "web-ext": "2.7.0"
  },
  "scripts": {
    "test": "npm run test:flow && npm run test:tape",
    "test:tape": "tape-ext 'test/*/manifest.json'",
    "test:flow": "flow check",
    "test:tcp": "tape-ext test/TCPSocket",
    "test:api": "tape-ext test/API",
    "precommit": "lint-staged",
    "demo": "MOZ_DISABLE_CONTENT_SANDBOX=1 web-ext run --firefox=nightly --browser-console --url about:debugging",
    "demo:discovery": "MOZ_DISABLE_CONTENT_SANDBOX=1 web-ext run --firefox=nightly --browser-console --url about:debugging --source-dir demo/discovery",
    "demo:protocol": "MOZ_DISABLE_CONTENT_SANDBOX=1 web-ext run --firefox=nightly --browser-console --url about:debugging --source-dir demo/protocol",
    "demo:fs": "MOZ_DISABLE_CONTENT_SANDBOX=1 web-ext run --firefox=nightly --browser-console --url about:debugging --source-dir demo/fs",
    "demo:dgram": "MOZ_DISABLE_CONTENT_SANDBOX=1 web-ext run --firefox=nightly --browser-console --url about:debugging --source-dir demo/dgram",
    "demo:tcp": "MOZ_DISABLE_CONTENT_SANDBOX=1 web-ext run --firefox=nightly --browser-console --url about:debugging --source-dir demo/tcp"
  },
  "lint-staged": {
    "*.js": [
      "prettier --no-semi --write",
      "git add"
    ]
  }
}
